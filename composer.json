{
    "name": "vikkio88/slime-framework",
    "description": "Set of libs which compose the slime-api framework",
    "keywords": ["slime-backend", "vikkio88", "rest", "eloquent", "microservice"],
    "license": "MIT",
    "authors": [
        {
            "name": "Vincenzo Ciaccio",
            "email": "vincenzo.ciaccio@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "slim/slim": "^3.0",
        "illuminate/database": "*",
        "siriusphp/validation": "dev-master",
        "vlucas/phpdotenv": "^2.3",
        "firebase/php-jwt": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Lib\\": "src/Lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/",
            "Tests\\Helpers\\": "tests/Helpers"
        }
    }
}
